@model IEnumerable<Cooperchip.aulaChagas.Dados.Modelos.TipoTelefone>

@{
    ViewBag.Title = "Tipo Telefone";
}

<h2>Tipo Telefone</h2>

<p>
    @Html.ActionLink("Adicionar", "Create", "TipoTelefone", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", null, new { id=item.TipoTelefoneId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", null, new { id=item.TipoTelefoneId }, new { @class = "btn btn-default" }) |
            @Html.ActionLink("Delete", "Delete",null, new { id=item.TipoTelefoneId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
